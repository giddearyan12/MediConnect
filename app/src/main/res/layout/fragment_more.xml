<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD0EAED"
    tools:context=".moreFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".HealthTips">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#A9B1F4"
            android:orientation="horizontal"
            tools:ignore="VisualLintBounds">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="324dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/one"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:text="MediConnect"
                android:textColor="#FAFAFB"
                android:textSize="28sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:gravity="center|right" />

        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HEALTH TIPS"
            android:textAlignment="center"
            android:padding="10sp"
            android:textStyle="bold"
            android:textSize="25sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tips"
            android:layout_marginTop="10sp"
            android:textSize="20sp"
            android:padding="20sp"
            android:justificationMode="inter_word"
            android:textStyle="italic" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="247dp"
            android:layout_marginTop="10sp"
            android:padding="20sp"
            android:src="@drawable/health" />


    </LinearLayout>


</RelativeLayout>